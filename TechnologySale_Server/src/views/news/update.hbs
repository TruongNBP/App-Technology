<body>
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update News</h4>
                <p class="card-description">
                    Update news to the store
                </p>
                <form class="forms-sample" role="form" method="post" action="/news/{{news._id}}/edit">
                    <div class="form-group">
                        <label>Image File</label>
                        <div class="input-group col-xs-12 parent-div">
              <input onchange="onChangeFile()" id="image-file" name="image" type="file" class="input-image ">
              <button class=" btn-upload" >Upload</button>
            </div>
               <img style=" object-fit: cover;"  src="{{news.image}}" width="200" height="200"
                id="image-view" />
                </div>
                         <div class="form-group">
                        <label for="exampleInputName1">Title</label>
                        <input type="text" class="form-control" name="title" value="{{news.title}}" id="title" >
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Body</label>
                        <textarea class="form-control" name="body"  id="body" rows="5">{{news.body}}</textarea>
                    </div>
                        <div class="form-group">
                        <label for="exampleInputName1">Released</label>
                          <input class="form-control"  type="date" name="released" id="released" value="{{news.released}}"/>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
    <script>
    const validation = () => {
        const name = document.getElementById('name').value;
        const released = document.getElementById('released').value;
        const submit = document.getElementById('submit');
        if(!name || name.trim().length == 0){
            submit.disabled = true;
        }else{
            submit.disabled = false;
        }
    }
    const onChangeFile = () => {
        const file = document.getElementById('image-file').files[0];
        const reader = new FileReader();
        reader.onload = e => {
            document.getElementById('image-view').src = e.target.result;
            document.getElementById('image-view').style.display = 'block';
        }
        reader.readAsDataURL(file);
    }

</script>
</body>