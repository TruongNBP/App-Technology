<body>
  <div class="col-7 grid-margin stretch-card1">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Detail order</h4>
        <p class="card-description">
          Detail order in the store
        </p>
        <form class="forms-sample" role="form" method="post" action="/order/{{order._id}}/edit">
          <div class="form-group">
            <label for="exampleInputName1">User</label>
            <input type="text" class="form-control" value="{{order.user_id.name}}" disabled>
          </div>
          <div class="form-group form-inline">
            <label for="exampleInputName1" class="pr-15 col-form-label">Name: </label>
            <input type="text" class="form-control mr-50" value="{{order.name}}" disabled id="name">
            <label for="exampleInputName1" class="pr-15 col-form-label">Phone: </label>
            <input type="text" class="form-control" value="{{order.phone}}" disabled id="phone">
          </div>
          <div class="form-group">
            <label for="exampleInputName1">Details</label>
            {{#each order.details}}
            <div class="form-group form-inline" style="border: 0.2px solid rgb(197, 197, 197); border-radius:5px ">
              <input style="width: 125px; 
                          height:120px;
                          background: white;
                          border-radius:23px;
                          border:none" type="image" class="form-control " src="{{product.image.[0]}}" disabled
                id="image">
              <input style=" background: white;border:none " type="text" class="form-control" value="{{product.name}}"
                disabled id="productName">
              <input style=" background: white;border:none;width:160px" type="text" class="form-control"
                value="{{product.price}}" disabled id="productName">
              <input style="background: white;border:none;width:70px " type="text" class="form-control"
                value="x{{quantity}}" disabled id="productName">
            </div>
            {{/each}}
          </div>
          <div class="form-group">
            <label for="exampleInputName1">Address</label>
            <input type="text" class="form-control" name="address" value="{{order.address}}" disabled id="address">
          </div>

          <div class="form-group">
            <label for="exampleInputName1">Released</label>
            <input type="text" class="form-control" value="{{order.released}}" disabled>
          </div>
          <div class="form-group form-inline">
            <label for="exampleInputName1" class="pr-20 col-form-label">Type: </label>
            <input type="text" class="form-control mr-65" value="{{order.paymentType}}" disabled id="paymentType">
            <label for="exampleInputName1" class="pr-15 col-form-label">Code: </label>
            <input type="text" class="form-control" value="{{order.code}}" disabled id="code">
          </div>

          <div class="form-group">
            <label for="exampleInputName1">FeeDelivery</label>
            <input type="text" class="form-control" value="{{order.feeDelivery}}" disabled>
          </div>
          <div class="form-group">
            <label for="exampleInputName1">Discount</label>
            <input type="text" class="form-control" value="{{order.moneyDiscount}}" disabled>
          </div>
          <div class="form-group">
            <label for="exampleInputName1">Total</label>
            <input type="text" class="form-control" value="{{order.moneyTotal}}" disabled>
          </div>
          <div class="form-group">
            <label for="exampleInputName1">Final</label>
            <input type="text" class="form-control" value="{{order.moneyFinal}}" disabled>
          </div>
          <div class="form-group">
            <label for="exampleSelectGender">Status</label>
            <select class="form-control" name="status">
              <option value={{order.status}}>{{order.status}}</option>
              {{#eq order.status "WAITING"}}
               <option value="PROCESSING">PROCESSING</option>
              <option value="DELIVERING">DELIVERING</option>
              <option value="COMPLETE">COMPLETE</option>
              {{/eq}}
              {{#eq order.status "PROCESSING"}}
              <option value="DELIVERING">DELIVERING</option>
              <option value="COMPLETE">COMPLETE</option>
              {{/eq}}
              {{#eq order.status "DELIVERING"}}
              <option value="COMPLETE">COMPLETE</option>
              {{/eq}}
            </select>
          </div>
          <button type="submit" class="btn btn-primary mr-2">Submit</button>
          <button class="btn btn-light">Cancel</button>
        </form>
      </div>
    </div>
  </div>
  <script>

  </script>
</body>